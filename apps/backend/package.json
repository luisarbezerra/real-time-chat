{
  "name": "@real-time-chat/backend",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "serve": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@real-time-chat/backend:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@real-time-chat/backend:build:development"
          },
          "production": {
            "buildTarget": "@real-time-chat/backend:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  },
  "dependencies": {
    "@real-time-chat/shared": "file:../../shared",
    "axios": "^1.6.0",
    "express": "^4.21.2",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "bufferutil": "^4.0.9",
    "utf-8-validate": "^6.0.5"
  }
}
